<%- include("../partials/head.ejs") %>

<body class="login-register">

    <%- include("../partials/header.ejs") %>

    <main class="login-register">

        <div class="container">
            <div class="row">
              <div class="column">
                <img src="/images/Logo.png" style="width:100%">
              </div>
              <div class="column">
                <h1>Iniciar Sesión</h1>
                <form action="/users/login" method="POST">

                  <div>
                    <label for="user">Tu email</label>
                    <input type="text" id="email" name="email" placeholder="Ingresa tu email...">
                  </div>


                  <div>
                    <label for="password">Contraseña</label>
                    <input type="password" id="password" name="password" placeholder="Ingrese contraseña...">
                  </div><span class="mensajeError"><%= locals.errores && errores.email ? errores.email.msg : null %> </span>
                  
                  <% if (locals.errors && errors.msg) { %>
                    <small class="mensajeError"> <%= errors.msg %> </small>
                    <% } %>
                
                    <div>
                      <input type="checkbox" name="recordarme" id="recordarme"><p>Recordarme</p>
                  </div>
                  <div class="buttons">                   
                  <input type="submit" value="Ingresar">                               
              </div>
                </form>

                <!-- <div>
                  <p>¿Olvidaste tu usuario o contraseña?</p>
                  <input type="submit" value="Recuperar usuario">
              </div>   

                <div>
                  <p>¿Sos nuevo en Tacopado?</p>
                  <input type="submit" value="Registrarse">
              </div> -->
              <div class="buttons"> 
              <div>
                <p>¿Olvidaste tu usuario o contraseña?</p>
                <a class="botonLogin" href="/users/register/">Recuperar usuario</a>
            </div>   

              <div>
                <p>¿Sos nuevo en Tacopado?</p>
              <a class="botonLogin" href="/users/register/">Registrarse</a>
            </div> 
          </div>  
              </div>
            </div>
          </div>

    </main>

    <%- include("../partials/footer.ejs") %>


  </body>
  </html>